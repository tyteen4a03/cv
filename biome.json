{
    "$schema": "https://biomejs.dev/schemas/1.5.0/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "files": {
        "ignore": ["./.next/**", "./.idea/**"]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120
    }
}
